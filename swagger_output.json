          },
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          },
          {
            "name": "subscriptionId",
            "in": "params",
            "required": true,
            "type": "string",
            "description": "Subscription ID"
          }
        ],
        "responses": {
          "201": {
            "description": "Subscription created"
          },
          "400": {
            "description": "Message of error",
