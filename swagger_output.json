            "required": true,
            "schema": {
              "type": "object",
              "properties": {}
            }
          },
          {
            "name": "recurrency",
            "in": "body",
            "description": "month or year",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {}
            }
          }
        ],
